/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
	Nand(a=a,b=b,out=aNb);
	Nand(a=aNb,b=b,out=aNbNb);
	Nand(a=a,b=aNb,out=aNaNb);
	Nand(a=aNaNb,b=aNbNb,out=sum);
	Not(in=aNb, out=carry);	
}
